= form_with model: Comment.new, 
            url: add_comment_project_path(project), 
            method: :post, 
            local: false,
            data: { controller: "form", action: "submit->form#handleSubmit" } do |f|
  = f.hidden_field :parent_id, value: comment.id
  .flex.gap-2
    = f.text_area :body, 
                 placeholder: "Add a reply...", 
                 class: "flex-grow p-2 border rounded-lg text-sm focus:ring-2 focus:ring-blue-200 focus:border-blue-400 transition-colors duration-200 bg-white"
    = f.submit "Reply", 
              class: "px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white text-sm font-medium rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-200 shadow-sm hover:shadow self-end" 