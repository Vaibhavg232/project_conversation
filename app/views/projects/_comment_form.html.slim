= form_with model: new_comment, 
            url: add_comment_project_path(project), 
            method: :post,
            local: false do |f|
  = f.text_area :body, 
                placeholder: "Share your thoughts...", 
                class: "w-full p-3 border rounded-lg mb-3 focus:ring-2 focus:ring-blue-200 focus:border-blue-400 transition-colors duration-200 bg-white"
  = f.submit "Submit Comment", 
            class: "w-full px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-200 shadow-sm hover:shadow" 